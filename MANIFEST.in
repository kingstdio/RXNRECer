# Include README and license
include README.md
include LICENSE
include RELEASE_NOTES.md
include requirements.txt

# Include configuration files
include rxnrecer/config/*.yaml
include rxnrecer/config/*.yml

# Include data and model directories (empty placeholders)
include data/.gitkeep
include ckpt/.gitkeep

# Include documentation
recursive-include docs *
recursive-include *.md

# Exclude unnecessary files
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude __pycache__
exclude .git*
exclude .DS_Store
exclude *.log
exclude *.tmp
exclude .pytest_cache
exclude .coverage
exclude htmlcov
exclude dist
exclude build
exclude *.egg-info
